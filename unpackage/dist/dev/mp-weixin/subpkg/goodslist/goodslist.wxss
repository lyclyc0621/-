.main {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  padding-bottom: constant(safe-area-inset-bottom);
  padding-bottom: env(safe-area-inset-bottom);
  box-sizing: content-box;
}
.main .main-top {
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.main .main-top .button {
  height: 60rpx;
  line-height: 60rpx;
  margin: 0 50rpx;
  font-size: 30rpx;
  color: #999;
  text-align: center;
  display: flex;
  position: relative;
}
.main .main-top .button .icon {
  position: absolute;
  top: 4rpx;
  right: -30rpx;
  height: 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 2rpx;
  margin-left: 2rpx;
}
.main .main-top .button .icon .icon-top {
  width: 30rpx;
  height: 16rpx;
  line-height: 1;
  color: #888;
}
.main .main-top .button .icon .icon-bottom {
  width: 30rpx;
  height: 20rpx;
  line-height: 1;
  color: #888;
}
.main .main-top .active {
  height: 60rpx;
  line-height: 60rpx;
  margin: 0 50rpx;
  font-size: 30rpx;
  color: #fd6906;
  text-align: center;
  position: relative;
}
.main .main-top .active .icon {
  position: absolute;
  top: 4rpx;
  right: -30rpx;
  height: 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 2rpx;
  margin-left: 2rpx;
}
.main .main-top .active .icon .icon-top {
  width: 30rpx;
  height: 16rpx;
  line-height: 1;
  color: #888;
}
.main .main-top .active .icon .icon-bottom {
  width: 30rpx;
  height: 20rpx;
  line-height: 1;
  color: #888;
}
.main .car {
  position: absolute;
  top: 50%;
  left: 50%;
  -webkit-transform: translate(-50%, -50%);
          transform: translate(-50%, -50%);
}
.main .goods_list {
  width: 370rpx;
  height: 474rpx;
  margin-bottom: 10rpx;
  background: #f9f9f9;
}
.main .goods_list .goods_img {
  width: 192rpx;
  height: 192rpx;
  padding: 60rpx 88rpx;
  text-align: center;
}
.main .goods_list .goods_img image {
  width: 100%;
  height: 100%;
}
.main .goods_list .goods_content {
  overflow: hidden;
  padding: 0 22rpx 0 40rpx;
}
.main .goods_list .goods_content .goods_title {
  height: 80rpx;
  line-height: 40rpx;
  font-size: 24rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.main .goods_list .goods_content .goods_price {
  height: 40rpx;
  margin-top: 20rpx;
  color: #666;
  font-size: 32rpx;
}

