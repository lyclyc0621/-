.login {
  background-color: #fff;
  padding: 30rpx 0;
}
.login .login_top {
  display: flex;
  align-items: center;
  margin-left: 66rpx;
}
.login .login_top .avatarUrl {
  width: 108rpx;
  height: 108rpx;
  border-radius: 50%;
  overflow: hidden;
}
.login .login_top .avatarUrl image {
  width: 100%;
  height: 100%;
}
.login .login_top .clickLogin {
  margin-left: 40rpx;
  font-size: 36rpx;
}
.login .login_btm {
  margin-top: 60rpx;
  display: flex;
  align-items: center;
  justify-content: space-around;
}
.login .login_btm .login_content {
  width: 86rpx;
  height: 86rpx;
  text-align: center;
}
.login .login_btm .login_content .number {
  font-size: 36rpx;
}
.login .login_btm .login_content .Vnumber {
  color: #bfbfbf;
  font-size: 24rpx;
}
.container {
  margin-top: 20rpx;
  padding: 0 20rpx;
}
.container .order {
  padding-top: 20rpx;
  background-color: #fff;
  border-radius: 20rpx;
}
.container .order .myorder {
  height: 60rpx;
  padding: 20rpx 30rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 28rpx;
  color: #303133;
}
.container .order .order_section {
  display: flex;
  align-items: center;
  justify-content: space-around;
}
.container .order .order_section .item {
  width: 120rpx;
  height: 120rpx;
  font-size: 24rpx;
  color: #303133;
  padding-bottom: 28rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
}
.container .order .order_section .item image {
  width: 40rpx;
  height: 40rpx;
}
.container .functionlist {
  margin: 20rpx 0;
  background-color: #fff;
  border-radius: 20rpx;
}
.container .functionlist .content {
  height: 60rpx;
  padding: 20rpx 30rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 28rpx;
}

