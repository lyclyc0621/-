/* 水平间距 */
.scroll-view-container {
  display: flex;
}
.scroll-view-container .left-scroll-view {
  width: 240rpx;
}
.scroll-view-container .left-scroll-view .left-scroll-item {
  width: 170rpx;
  line-height: 100rpx;
  background-color: #f7f7f7;
  text-align: center;
  font-size: 28rpx;
}
.scroll-view-container .left-scroll-view .left-scroll-item.active {
  background-color: #FFFFFF;
  position: relative;
  color: #fd6906;
}
.scroll-view-container .left-scroll-view .left-scroll-item.active::before {
  position: absolute;
  top: 20rpx;
  content: '';
  display: block;
  width: 6rpx;
  height: 60rpx;
  background-color: #fd6906;
}
.scroll-view-container .right-scroll-view .right-scroll-item .cate-lv2 .cate-lv2-title {
  font-size: 28rpx;
  text-align: center;
  padding: 30rpx 0;
  color: #303133;
}
.scroll-view-container .right-scroll-view .right-scroll-item .cate-lv2 .cate-lv3-list {
  display: flex;
  flex-wrap: wrap;
}
.scroll-view-container .right-scroll-view .right-scroll-item .cate-lv2 .cate-lv3-list .cate-lv3-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 28rpx 0;
  width: 50%;
  color: #848484;
}
.scroll-view-container .right-scroll-view .right-scroll-item .cate-lv2 .cate-lv3-list .cate-lv3-item image {
  width: 100rpx;
  height: 100rpx;
}
.scroll-view-container .right-scroll-view .right-scroll-item .cate-lv2 .cate-lv3-list .cate-lv3-item text {
  margin-top: 20rpx;
  font-size: 24rpx;
}

